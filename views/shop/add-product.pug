extends ../layouts/main-layout

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")
block content
  form.product-form(action=path method="POST")
    .form-control
      label(for="title") Title
      input(type="text" name="title" value=(product ? product.title : ""))
    .form-control
      label(for="image") Image  
      input(type="text" name="image" value=(product ? product.image : ""))
    .form-control
      label(for="price") Price  
      input(type="number" name="price" step="0.01" value=(product ? product.price : "")) 
    .form-control
      label(for="description") Description
      textarea(name="description" rows="5" id="description") #{product ? product.description : ""}
    button.btn(type="submit") #{method === "PATCH"? "Save" : "Add"} product

